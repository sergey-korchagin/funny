<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainRelativeLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainLinearLayout">



            <android.support.v4.view.ViewPager
                android:id="@+id/photos_image_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1" />


        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/dots"
            android:id="@+id/btnMore"
            android:layout_marginRight="10dp"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/btnMore"
            android:id="@+id/btnLike" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnTop"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/btnLike"

            android:background="@drawable/icon01_top_f"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon01_save_f"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/btnTop"
            android:id="@+id/btnSave" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/eye"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/btnSave"
            android:id="@+id/btnNotSeen" />
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toRightOf="@id/btnSave"
            android:id="@+id/btnNotSeenIndicator" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon01_share_f"
            android:id="@+id/btnShare"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/btnNotSeen"
            android:layout_gravity="right|center_horizontal|center_vertical" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/smallImage"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/meu"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/show_menu_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/likesLayout"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_weight="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Likes:"
                android:id="@+id/textView2"
                android:layout_gravity="right|bottom"
                android:textStyle="bold"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/likesCounter"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/errorLayout"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:background="@drawable/error"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="А интернета то нету! Как теперь смотреть картинки?"
                android:id="@+id/textView3"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
        </FrameLayout>

    </RelativeLayout>

</LinearLayout><!-- From: file:/C:/Users/serge_000/Desktop/funny/ParseStarterProject/src/main/res/layout/pictures_main_fragment.xml -->